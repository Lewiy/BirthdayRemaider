<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayLight">

    <RelativeLayout
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/gridViewImagePerson"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_person_black_24dp"
            android:background="@color/colorGrayL"/>

        <TextView
            android:id="@+id/gridViewNamePerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/gridViewTimeToCelebrationPerson"
            android:layout_centerHorizontal="true"
            android:text="@string/birthday"
            android:textColor="@color/colorGrayLight" />

        <TextView
            android:id="@+id/gridViewTimeToCelebrationPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/gridViewImagePerson"
            android:layout_centerHorizontal="true"
            android:text="2sdfsdf"
            android:textColor="@color/colorGrayLight" />
    </RelativeLayout>


</RelativeLayout>